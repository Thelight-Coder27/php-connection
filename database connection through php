<?php 
$servername = "localhost"; 
 
$username = "root"; 
 
$password = "123"; 

$conn = new mysqli($servername, 
			$username, $password); 
 
if ($conn->connect_error) { 
	die("Connection failure: "
		. $conn->connect_error); 
} 
 
$sql = "CREATE DATABASE ABCdata"; 
if ($conn->query($sql) === TRUE) { 
	echo "Database with name of Database"; 
} else { 
	echo "Error: " . $conn->error; 
} 
 
$conn->close(); 
?> 
